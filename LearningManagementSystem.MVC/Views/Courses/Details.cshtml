@model LearningManagementSystem.MVC.Models.CourseDetailsViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="container my-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Courses" asp-action="Index">Courses</a></li>
            <li class="breadcrumb-item active">@Model.Title</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Course Info -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                @if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
                {
                    <img src="@Model.ThumbnailUrl" class="card-img-top" alt="@Model.Title" style="max-height: 400px; object-fit: cover;" />
                }
                else
                {
                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
                        <i class="bi bi-book" style="font-size: 6rem; color: #9CA3AF;"></i>
                    </div>
                }

                <div class="card-body p-4">
                    <h1 class="fw-bold mb-3">@Model.Title</h1>

                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-person-circle me-2" style="font-size: 1.5rem; color: #667eea;"></i>
                        <div>
                            <span class="fw-semibold">@Model.InstructorName</span>
                            <div class="small text-muted">Instructor</div>
                        </div>
                    </div>

                    <div class="d-flex flex-wrap gap-3 mb-4">
                        <div class="d-flex align-items-center">
                            @if (Model.AverageRating > 0)
                            {
                                <span class="text-warning me-1">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= Math.Floor(Model.AverageRating))
                                        {
                                            <i class="bi bi-star-fill"></i>
                                        }
                                        else if (i == Math.Ceiling(Model.AverageRating))
                                        {
                                            <i class="bi bi-star-half"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star"></i>
                                        }
                                    }
                                </span>
                                <span class="fw-semibold">@Model.AverageRating.ToString("0.0")</span>
                            }
                            else
                            {
                                <span class="text-muted">No ratings yet</span>
                            }
                        </div>

                        <div class="text-muted">|</div>
                        <div><i class="bi bi-people me-1"></i>@Model.EnrollmentCount students</div>

                        @if (Model.Duration.HasValue)
                        {
                            <div class="text-muted">|</div>
                            <div><i class="bi bi-clock me-1"></i>@Model.Duration hours</div>
                        }

                        <div class="text-muted">|</div>
                        <div>
                            <span class="badge" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">@Model.Level</span>
                        </div>

                        <div class="text-muted">|</div>
                        <div>
                            <span class="badge bg-secondary">@Model.CategoryName</span>
                        </div>
                    </div>

                    <hr />

                    <h5 class="fw-bold mb-3">About This Course</h5>
                    <p class="text-muted">@Model.Description</p>
                </div>
            </div>
        </div>

        <!-- Enrollment Card -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-lg sticky-top" style="top: 20px;">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <div class="display-4 fw-bold mb-2" style="color: #667eea;">
                            @if (Model.Price > 0)
                            {
                                <span>$@Model.Price</span>
                            }
                            else
                            {
                                <span>Free</span>
                            }
                        </div>
                    </div>

                    <div id="enrollmentSection" class="d-grid gap-2">
                        <!-- Will be populated by JavaScript based on auth state -->
                        <button class="btn btn-primary btn-lg" id="enrollBtn" onclick="handleEnroll(@Model.CourseId)" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                            <i class="bi bi-check-circle me-2"></i>Enroll Now
                        </button>
                        <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Path" class="btn btn-outline-primary btn-lg" id="loginBtn" style="display: none;">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Login to Enroll
                        </a>
                    </div>

                    <hr class="my-4" />

                    <h6 class="fw-bold mb-3">This course includes:</h6>
                    <ul class="list-unstyled">
                        @if (Model.Duration.HasValue)
                        {
                            <li class="mb-2"><i class="bi bi-clock text-primary me-2"></i>@Model.Duration hours of content</li>
                        }
                        <li class="mb-2"><i class="bi bi-infinity text-primary me-2"></i>Lifetime access</li>
                        <li class="mb-2"><i class="bi bi-phone text-primary me-2"></i>Access on mobile and desktop</li>
                        <li class="mb-2"><i class="bi bi-award text-primary me-2"></i>Certificate of completion</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
      const API_BASE = (typeof AUTH_CONFIG !== 'undefined' && AUTH_CONFIG.API_URL) ? AUTH_CONFIG.API_URL : 'https://localhost:7059/api';

        // Check authentication and enrollment status
        document.addEventListener('DOMContentLoaded', function() {
        const isAuth = isAuthenticated();
            const enrollBtn = document.getElementById('enrollBtn');
            const loginBtn = document.getElementById('loginBtn');

     if (!isAuth) {
      enrollBtn.style.display = 'none';
          loginBtn.style.display = 'block';
            }
        });

        async function handleEnroll(courseId) {
 if (!requireAuth()) return;

    const token = getToken();

    const btn = document.getElementById('enrollBtn');
     btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Enrolling...';

   try {
          const response = await fetch(`${API_BASE}/enrollments/${courseId}`, {
 method: 'POST',
        headers: {
'Authorization': `Bearer ${token}`,
           'Content-Type': 'application/json'
       }
       });

              const result = await response.json();

             if (response.ok && result.success) {
          alert('Successfully enrolled!');
   window.location.href = '/student/mycourses';
             } else {
       alert(result.message || 'Enrollment failed');
        }
            } catch (error) {
 console.error('Enrollment error:', error);
      alert('Unable to enroll. Please try again.');
   } finally {
    btn.disabled = false;
         btn.innerHTML = '<i class="bi bi-check-circle me-2"></i>Enroll Now';
      }
        }
    </script>
}
