@model LearningManagementSystem.MVC.Models.MyCoursesViewModel
@{
    ViewData["Title"] = "My Courses";
}

<div class="container my-5">
    <h1 class="fw-bold mb-4">My Courses</h1>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
       @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
   </div>
    }

    <!-- Filter Tabs -->
  <ul class="nav nav-tabs mb-4" id="coursesTabs">
        <li class="nav-item">
   <a class="nav-link active" href="#all" data-bs-toggle="tab">All (@Model.EnrolledCourses.Count)</a>
        </li>
  <li class="nav-item">
    <a class="nav-link" href="#inprogress" data-bs-toggle="tab">In Progress (@Model.EnrolledCourses.Count(c => c.ProgressPercentage > 0 && c.ProgressPercentage < 100))</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#completed" data-bs-toggle="tab">Completed (@Model.EnrolledCourses.Count(c => c.Status == "Completed"))</a>
   </li>
    </ul>

    <!-- Courses List -->
    <div class="tab-content">
        <!-- All Courses -->
        <div class="tab-pane fade show active" id="all">
      @if (Model.EnrolledCourses.Any())
      {
 <div class="row g-3">
    @foreach (var course in Model.EnrolledCourses)
          {
          <div class="col-md-6 col-lg-4">
     <div class="card h-100 border-0 shadow-sm">
  <img src="@(string.IsNullOrEmpty(course.ThumbnailUrl) ? "/images/course-placeholder.png" : course.ThumbnailUrl)" 
 class="card-img-top" style="height:180px;object-fit:cover;" alt="@course.Title" />
        <div class="card-body d-flex flex-column">
  <div class="d-flex justify-content-between align-items-start mb-2">
  <h5 class="card-title mb-0">@course.Title</h5>
      @if (course.Status == "Completed")
                   {
           <span class="badge bg-success">Completed</span>
      }
   else if (course.ProgressPercentage > 0)
                   {
     <span class="badge bg-primary">In Progress</span>
     }
       else
            {
      <span class="badge bg-secondary">Not Started</span>
       }
           </div>
       <p class="text-muted small mb-3"><i class="bi bi-person"></i> @course.InstructorName</p>
          
<div class="mb-3">
            <div class="d-flex justify-content-between small mb-1">
      <span>Progress</span>
         <span class="fw-semibold">@course.ProgressPercentage.ToString("0")%</span>
            </div>
      <div class="progress" style="height:8px;">
      <div class="progress-bar" style="width:@(course.ProgressPercentage)%;background:linear-gradient(90deg,#10B981,#059669);"></div>
         </div>
  </div>

         <div class="mt-auto">
        @if (course.Status == "Completed")
           {
        <a href="@Url.Action("Learn", "Student", new { id = course.CourseId })" class="btn btn-outline-primary w-100 mb-2">Review Course</a>
     <button class="btn btn-success w-100" onclick="alert('Certificate download coming soon!')">
              <i class="bi bi-download me-2"></i>Certificate
      </button>
            }
       else
       {
       <a href="@Url.Action("Learn", "Student", new { id = course.CourseId })" class="btn btn-primary w-100">
 @(course.ProgressPercentage > 0 ? "Continue Learning" : "Start Learning")
            </a>
           }
      </div>
         </div>
          </div>
               </div>
    }
     </div>
            }
            else
       {
        <div class="text-center text-muted py-5">
       <i class="bi bi-inbox" style="font-size:4rem;"></i>
         <h4 class="mt-3">No courses enrolled yet</h4>
     <p>Start your learning journey by <a asp-controller="Courses" asp-action="Index">browsing courses</a></p>
      </div>
            }
        </div>

        <!-- In Progress -->
        <div class="tab-pane fade" id="inprogress">
            @{
     var inProgressCourses = Model.EnrolledCourses.Where(c => c.ProgressPercentage > 0 && c.ProgressPercentage < 100).ToList();
       }
    @if (inProgressCourses.Any())
            {
  <div class="row g-3">
      @foreach (var course in inProgressCourses)
   {
        <div class="col-md-6 col-lg-4">
     <div class="card h-100 border-0 shadow-sm">
          <img src="@(string.IsNullOrEmpty(course.ThumbnailUrl) ? "/images/course-placeholder.png" : course.ThumbnailUrl)" 
    class="card-img-top" style="height:180px;object-fit:cover;" alt="@course.Title" />
         <div class="card-body d-flex flex-column">
             <h5 class="card-title">@course.Title</h5>
   <p class="text-muted small mb-3"><i class="bi bi-person"></i> @course.InstructorName</p>
   
       <div class="mb-3">
           <div class="d-flex justify-content-between small mb-1">
<span>Progress</span>
    <span class="fw-semibold">@course.ProgressPercentage.ToString("0")%</span>
        </div>
           <div class="progress" style="height:8px;">
      <div class="progress-bar" style="width:@(course.ProgressPercentage)%;background:linear-gradient(90deg,#10B981,#059669);"></div>
 </div>
  </div>

<div class="mt-auto">
  <a href="@Url.Action("Learn", "Student", new { id = course.CourseId })" class="btn btn-primary w-100">
 Continue Learning
       </a>
       </div>
    </div>
     </div>
           </div>
   }
          </div>
    }
            else
  {
     <div class="text-center text-muted py-5">
  <p>No courses in progress</p>
        </div>
            }
        </div>

        <!-- Completed -->
        <div class="tab-pane fade" id="completed">
          @{
     var completedCourses = Model.EnrolledCourses.Where(c => c.Status == "Completed").ToList();
       }
   @if (completedCourses.Any())
            {
         <div class="row g-3">
      @foreach (var course in completedCourses)
              {
       <div class="col-md-6 col-lg-4">
     <div class="card h-100 border-0 shadow-sm">
      <img src="@(string.IsNullOrEmpty(course.ThumbnailUrl) ? "/images/course-placeholder.png" : course.ThumbnailUrl)" 
            class="card-img-top" style="height:180px;object-fit:cover;" alt="@course.Title" />
       <div class="card-body d-flex flex-column">
      <div class="d-flex justify-content-between align-items-start mb-2">
   <h5 class="card-title mb-0">@course.Title</h5>
       <span class="badge bg-success">Completed</span>
               </div>
               <p class="text-muted small mb-3"><i class="bi bi-person"></i> @course.InstructorName</p>

           <div class="mt-auto">
   <a href="@Url.Action("Learn", "Student", new { id = course.CourseId })" class="btn btn-outline-primary w-100 mb-2">Review Course</a>
           <button class="btn btn-success w-100" onclick="alert('Certificate download coming soon!')">
              <i class="bi bi-download me-2"></i>Certificate
    </button>
    </div>
                </div>
        </div>
   </div>
   }
           </div>
     }
  else
            {
       <div class="text-center text-muted py-5">
      <p>No completed courses yet</p>
          </div>
    }
        </div>
    </div>
</div>
