@model List<LearningManagementSystem.MVC.Models.CourseResponseDto>
@{
    ViewData["Title"] = "My Courses";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold">My Courses</h2>
 <a asp-action="CreateCourse" class="btn btn-primary">
       <i class="bi bi-plus-circle me-2"></i>Create New Course
      </a>
    </div>

    @if (TempData["Success"] != null)
 {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
    @TempData["Success"]
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
 <div class="row g-4">
      @foreach (var course in Model)
     {
                <div class="col-md-6 col-lg-4">
             <div class="card h-100 shadow-sm">
            @if (!string.IsNullOrEmpty(course.ThumbnailUrl))
           {
           <img src="@course.ThumbnailUrl" class="card-img-top" alt="@course.Title" style="height: 200px; object-fit: cover;" />
     }
      else
           {
     <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
           <i class="bi bi-book display-4 text-muted"></i>
            </div>
         }

   <div class="card-body d-flex flex-column">
        <div class="d-flex justify-content-between align-items-start mb-2">
    <h5 class="card-title fw-bold">@course.Title</h5>
              @if (course.IsPublished)
 {
    <span class="badge bg-success">Published</span>
   }
        else
        {
     <span class="badge bg-secondary">Draft</span>
  }
               </div>

    <p class="card-text text-muted small text-truncate mb-3">@course.Description</p>

         <div class="mb-3">
            <div class="d-flex justify-content-between text-muted small mb-1">
               <span><i class="bi bi-people me-1"></i>@course.EnrollmentCount students</span>
      <span class="badge bg-secondary">@course.Level</span>
  </div>
               @if (course.AverageRating > 0)
   {
   <div class="text-warning">
        <i class="bi bi-star-fill"></i> @course.AverageRating.ToString("0.0")
     </div>
         }
     </div>

       <div class="mt-auto">
            <div class="d-flex gap-2 mb-2">
       <a asp-action="EditCourse" asp-route-id="@course.CourseId" class="btn btn-sm btn-outline-primary flex-fill">
  <i class="bi bi-pencil me-1"></i>Edit
 </a>
   <a asp-action="ManageContent" asp-route-id="@course.CourseId" class="btn btn-sm btn-outline-info flex-fill">
      <i class="bi bi-file-earmark-text me-1"></i>Content
        </a>
           </div>

  <div class="d-flex gap-2">
     @if (course.IsPublished)
          {
      <form asp-action="TogglePublish" method="post" class="flex-fill">
                <input type="hidden" name="id" value="@course.CourseId" />
        <input type="hidden" name="publish" value="false" />
  <button type="submit" class="btn btn-sm btn-outline-warning w-100">
     <i class="bi bi-eye-slash me-1"></i>Unpublish
  </button>
   </form>
       }
     else
  {
             <form asp-action="TogglePublish" method="post" class="flex-fill">
      <input type="hidden" name="id" value="@course.CourseId" />
       <input type="hidden" name="publish" value="true" />
    <button type="submit" class="btn btn-sm btn-outline-success w-100">
           <i class="bi bi-eye me-1"></i>Publish
             </button>
     </form>
      }

           <form asp-action="DeleteCourse" method="post" class="flex-fill" onsubmit="return confirm('Are you sure you want to delete this course?');">
      <input type="hidden" name="id" value="@course.CourseId" />
         <button type="submit" class="btn btn-sm btn-outline-danger w-100">
<i class="bi bi-trash me-1"></i>Delete
          </button>
         </form>
           </div>
           </div>
      </div>
 </div>
        </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
   <i class="bi bi-book display-1 text-muted mb-3"></i>
<h4 class="text-muted">No courses yet</h4>
            <p class="text-muted">Start creating your first course to share your knowledge!</p>
         <a asp-action="CreateCourse" class="btn btn-primary mt-3">
        <i class="bi bi-plus-circle me-2"></i>Create Your First Course
         </a>
        </div>
 }
</div>
