@{
    ViewData["Title"] = "About Us";
}

<div class="bg-light py-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold mb-3">About LMS Platform</h1>
      <p class="lead text-muted">Empowering learners worldwide with quality education</p>
 </div>
</div>

<div class="container my-5">
    <div class="row justify-content-center">
   <div class="col-lg-8">
 <div class="mb-5">
  <h2 class="fw-bold mb-3">Our Mission</h2>
      <p class="lead">
   We believe that education should be accessible to everyone, everywhere. Our platform connects passionate instructors with eager learners, creating a vibrant community of knowledge sharing.
   </p>
            </div>

      <div class="mb-5">
    <h2 class="fw-bold mb-3">What We Offer</h2>
    <div class="row g-4">
      <div class="col-md-6">
      <div class="card border-0 shadow-sm h-100">
 <div class="card-body">
      <div class="text-primary mb-3">
    <i class="bi bi-book display-4"></i>
        </div>
     <h5 class="fw-bold">Quality Courses</h5>
          <p class="text-muted mb-0">Access hundreds of courses across various topics, taught by expert instructors.</p>
   </div>
   </div>
           </div>

 <div class="col-md-6">
           <div class="card border-0 shadow-sm h-100">
<div class="card-body">
       <div class="text-success mb-3">
   <i class="bi bi-person-check display-4"></i>
        </div>
     <h5 class="fw-bold">Expert Instructors</h5>
    <p class="text-muted mb-0">Learn from professionals who are passionate about sharing their expertise.</p>
      </div>
        </div>
  </div>

     <div class="col-md-6">
     <div class="card border-0 shadow-sm h-100">
    <div class="card-body">
  <div class="text-warning mb-3">
    <i class="bi bi-trophy display-4"></i>
        </div>
       <h5 class="fw-bold">Certificates</h5>
      <p class="text-muted mb-0">Earn certificates upon course completion to showcase your achievements.</p>
  </div>
   </div>
     </div>

       <div class="col-md-6">
         <div class="card border-0 shadow-sm h-100">
   <div class="card-body">
     <div class="text-info mb-3">
      <i class="bi bi-people display-4"></i>
     </div>
       <h5 class="fw-bold">Community</h5>
         <p class="text-muted mb-0">Join a thriving community of learners and share your journey.</p>
  </div>
      </div>
     </div>
        </div>
    </div>

      <div class="mb-5">
    <h2 class="fw-bold mb-3">Our Values</h2>
   <ul class="list-unstyled">
      <li class="mb-3">
     <i class="bi bi-check-circle-fill text-success me-2"></i>
     <strong>Accessibility:</strong> Education for everyone, regardless of background or location
       </li>
       <li class="mb-3">
        <i class="bi bi-check-circle-fill text-success me-2"></i>
    <strong>Quality:</strong> Maintaining high standards for all course content
      </li>
    <li class="mb-3">
       <i class="bi bi-check-circle-fill text-success me-2"></i>
       <strong>Innovation:</strong> Continuously improving our platform and learning experience
          </li>
     <li class="mb-3">
      <i class="bi bi-check-circle-fill text-success me-2"></i>
   <strong>Community:</strong> Building connections between learners and instructors
  </li>
       </ul>
     </div>

         <div class="text-center bg-light p-5 rounded">
        <h3 class="fw-bold mb-3">Join Us Today</h3>
      <p class="text-muted mb-4">Start your learning journey or share your knowledge with the world.</p>
   <div class="d-flex justify-content-center gap-2">
         <a asp-controller="Courses" asp-action="Index" class="btn btn-primary">
         Browse Courses
    </a>
       <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary">
   Sign Up
       </a>
    </div>
     </div>
   </div>
    </div>
</div>
