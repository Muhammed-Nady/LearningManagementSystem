<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LMS Platform</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top shadow-sm">
        <div class="container">
            <!-- Brand -->
            <a class="navbar-brand fw-bold d-flex align-items-center" href="/">
                <i class="bi bi-book-half me-2 fs-4"></i>
                <span>LMS Platform</span>
            </a>

            <!-- Mobile Toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Nav Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Centered nav (Home, Courses, About) -->
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0 nav-center">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-house-door me-1"></i>Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/courses">
                            <i class="bi bi-grid me-1"></i>Courses
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/about">
                            <i class="bi bi-info-circle me-1"></i>About
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/contact">
                            <i class="bi bi-envelope me-1"></i>Contact
                        </a>
                    </li>
                </ul>

                <!-- Right side auth / user menu -->
                <ul class="navbar-nav ms-auto align-items-lg-center">
                    <!-- Role-specific dashboard links -->
                    <li class="nav-item d-none" id="navStudentDashboard">
                        <a class="nav-link" href="/student/dashboard">
                            <i class="bi bi-speedometer2 me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item d-none" id="navInstructorDashboard">
                        <a class="nav-link" href="/instructor/dashboard">
                            <i class="bi bi-easel me-1"></i>Instructor
                        </a>
                    </li>
                    <li class="nav-item d-none" id="navAdminDashboard">
                        <a class="nav-link" href="/admin/dashboard">
                            <i class="bi bi-shield-lock me-1"></i>Admin
                        </a>
                    </li>

                    <!-- Not Logged In -->
                    <li class="nav-item" id="navLogin">
                        <a class="btn btn-outline-light btn-sm" href="/account/login">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Login
                        </a>
                    </li>
                    <li class="nav-item ms-2" id="navRegister">
                        <a class="btn btn-outline-light btn-sm" href="/account/register">
                            <i class="bi bi-person-plus me-1"></i>Sign Up
                        </a>
                    </li>

                    <!-- Logged In -->
                    <li class="nav-item dropdown d-none ms-2" id="navUserMenu">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button"
                            data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle me-1"></i>
                            <span id="userName">User</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <!-- Student Links -->
                            <li class="role-student"><a class="dropdown-item" href="/student/dashboard"><i
                                        class="bi bi-speedometer2 me-2"></i>Dashboard</a></li>
                            <li class="role-student"><a class="dropdown-item" href="/student/mycourses"><i
                                        class="bi bi-book me-2"></i>My Courses</a></li>

                            <!-- Instructor Links -->
                            <li class="role-instructor"><a class="dropdown-item" href="/instructor/dashboard"><i
                                        class="bi bi-easel me-2"></i>Instructor Dashboard</a></li>
                            <li class="role-instructor"><a class="dropdown-item" href="/instructor/mycourses"><i
                                        class="bi bi-journals me-2"></i>My Courses</a></li>
                            <li class="role-instructor"><a class="dropdown-item" href="/instructor/createcourse"><i
                                        class="bi bi-plus-circle me-2"></i>Create Course</a></li>

                            <!-- Admin Links -->
                            <li class="role-admin"><a class="dropdown-item" href="/admin/dashboard"><i
                                        class="bi bi-shield-lock me-2"></i>Admin Dashboard</a></li>
                            <li class="role-admin"><a class="dropdown-item" href="/admin/manageusers"><i
                                        class="bi bi-people me-2"></i>Manage Users</a></li>
                            <li class="role-admin"><a class="dropdown-item" href="/admin/managecategories"><i
                                        class="bi bi-grid me-2"></i>Categories</a></li>

                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#" onclick="logout()"><i
                                        class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow-1">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-book-half me-2"></i>LMS Platform
                    </h5>
                    <p class="text-muted small">
                        Empowering learners worldwide with quality education and innovative courses.
                    </p>
                </div>
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-muted text-decoration-none small">Home</a></li>
                        <li><a href="/courses" class="text-muted text-decoration-none small">Browse Courses</a></li>
                        <li><a href="/home/about" class="text-muted text-decoration-none small">About Us</a></li>
                        <li><a href="/home/contact" class="text-muted text-decoration-none small">Contact</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold mb-3">Connect</h6>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-light"><i class="bi bi-facebook fs-4"></i></a>
                        <a href="#" class="text-light"><i class="bi bi-twitter fs-4"></i></a>
                        <a href="#" class="text-light"><i class="bi bi-linkedin fs-4"></i></a>
                        <a href="#" class="text-light"><i class="bi bi-youtube fs-4"></i></a>
                    </div>
                </div>
            </div>
            <hr class="border-secondary my-3">
            <div class="text-center text-muted small">
                &copy; 2026 LMS Platform. All rights reserved. | <a href="/home/privacy" class="text-muted">Privacy Policy</a>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/auth.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
